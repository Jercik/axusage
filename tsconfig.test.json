{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Not transpiling with TypeScript */
    "noEmit": true,

    /* Not running in the DOM */
    "lib": ["es2022"],

    /* Test environment types */
    "types": ["vitest/globals", "node"]
  },
  "include": ["**/*.test.*", "**/*.spec.*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
