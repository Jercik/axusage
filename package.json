{
  "name": "agent-usage",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "CLI tool to query API usage statistics for AI services (Claude, ChatGPT, GitHub Copilot)",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jercik/agent-usage.git"
  },
  "type": "module",
  "bin": {
    "agent-usage": "./bin/agent-usage"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "pnpm run rebuild && node bin/agent-usage",
    "usage": "node bin/agent-usage",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "rebuild": "pnpm run clean && pnpm run build",
    "prepare": "husky",
    "prepublishOnly": "pnpm run rebuild",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "knip": "knip",
    "fta:check": "fta-check"
  },
  "keywords": [],
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "playwright": "^1.56.1",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.31.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "fta-check": "^1.1.0",
    "fta-cli": "^3.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "knip": "^5.66.4",
    "prettier": "3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
