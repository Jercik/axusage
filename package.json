{
  "name": "agent-usage",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "CLI tool to query API usage statistics for AI services (Claude, ChatGPT, GitHub Copilot)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/agent-usage.git"
  },
  "type": "module",
  "bin": {
    "agent-usage": "bin/agent-usage"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "playwright install chromium",
    "prepare": "git config core.hooksPath .githooks",
    "prepublishOnly": "pnpm run rebuild",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fta": "fta-check",
    "knip": "knip",
    "lint": "eslint",
    "rebuild": "pnpm run clean && pnpm run build",
    "start": "pnpm run rebuild && node bin/agent-usage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b --noEmit"
  },
  "keywords": [],
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "axconfig": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "env-paths": "^3.0.0",
    "playwright": "^1.57.0",
    "prom-client": "^15.1.3",
    "trash": "^10.0.1",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^62.0.0",
    "fta-check": "^1.5.0",
    "fta-cli": "^3.0.0",
    "globals": "^16.5.0",
    "knip": "^5.73.4",
    "prettier": "3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  }
}
